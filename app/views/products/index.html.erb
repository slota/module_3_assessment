<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @products %>
  <h4>Your search returned <%= @products.count %> products</h4>
  <% @products.each do |product| %>
    <div class=product-<%="#{product.sku}"%>>
      <br>
      ID: <%= product.sku %>
      <br>
      Name: <%= product.name %>
      <br>
      Description: <%= product.description %>
      <br>
      Average Rating: <%= product.customer_review_average %>
      <br>
      <%= image_tag(product.image) %>
    </div>
  <% end %>
<% end %>
